<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="LightManagement.Pages.Setup">
    <ContentPage.Content>
        <ScrollView x:Name="StepOne">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <Label x:Name="StepOneLabel" Text="Please select product to add" />
                <RadioButton Content="Phillips Hue" Value="HUE" />
                <Button ImageSource="{mi:FontAwesome SquareCaretRight }"></Button>
            </VerticalStackLayout>


        </ScrollView>
    </ContentPage.Content>
</ContentPage>