<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="LightManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:local="clr-namespace:LightManagement"
    xmlns:pages="clr-namespace:LightManagement.Pages"
    Title="LightManagement">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <FlyoutItem Title="Setup" Icon="{mi:FontAwesome Lightbulb}">
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:Setup}"
                Route="Setup" />
        </Tab>
    </FlyoutItem>
    

</Shell>